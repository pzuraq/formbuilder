<%= link_to group_path(@group), class: "btn btn-sm btn-default" do %>
  <span class="glyphicon glyphicon-chevron-left"></span>
  Back
<% end %>

<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label "Group Name:" %><br>
    <%= f.text_field :name %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Moderators:</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @moderators.each do |moderator| %>
        <tr>
          <td><%= moderator.username %></td>
          <% if is_moderator? || is_super? %>
            <td><%= link_to 'Remove', remove_permission_group_path(:remove_id => moderator.id), method: :delete_permission, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <% if is_moderator? || is_super? %>
    <%= select_tag(:new_moderator_id, options_for_select(@options), :include_blank => true) %>
    <%# <%= link_to 'New Moderator (TODO)', new_group_form_path(:moderator_id => @group.id) %>
  <% end %>
  <p>================================</p>
  <br />
  <table>
    <thead>
      <tr>
        <th>Editors:</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @editors.each do |editor| %>
        <tr>
          <td><%= editor.username %></td>
          <% if is_moderator? || is_super? %>
            <td><%= link_to 'Remove', remove_permission_group_path(:remove_id => editor.id), method: :delete_permission, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <% if is_moderator? || is_super? %>
    <%= select_tag(:new_editor_id, options_for_select(@options), :include_blank => true) %>
    <%# link_to 'New Editor (TODO)', new_group_path(:parent_id => @group.id) %>
  <% end %>
  <br>
  <p>================================</p>

  <div class="actions">
    <%= f.submit class: 'btn btn-default' %>
    <% unless @group.parent.nil? %>
      <% if can_delete? %>
        <%= button_to "Delete Group", @group, :method => :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
  </div>
<% end %>
